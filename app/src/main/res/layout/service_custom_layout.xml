<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgview"
                    android:layout_width="210dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/specialneed"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#4800ACC1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Screenings"
                        android:textStyle="bold"
                        android:textColor="#1E88E5"
                        android:textSize="18sp"></TextView>
                    <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="14dp">
                    </androidx.legacy.widget.Space>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="General physical, eye, ENT and dental"
                        android:textSize="14sp"></TextView>
                    <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </androidx.legacy.widget.Space>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Paperless documentation"
                        android:textSize="14sp"></TextView>
                    <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp">
                    </androidx.legacy.widget.Space>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Records available to school and parents anytime, anywhere"
                        android:textSize="14sp"></TextView>
                    <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="3dp">
                    </androidx.legacy.widget.Space>
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>