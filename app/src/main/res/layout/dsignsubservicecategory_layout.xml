<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:padding="8dp"

        card_view:cardCornerRadius="8dp">
    <LinearLayout
        android:id="@+id/layout_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borderlesscardcoupon"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/expert_icon"
            android:padding="5dp"
            app:tint="#055950"></ImageView>
        <TextView
            android:id="@+id/txtcategoryname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#055950"
            android:text="BMI Calculator"></TextView>

        <TextView
            android:id="@+id/txtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:visibility="gone"></TextView>
        <TextView
            android:id="@+id/txtimagepath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"></TextView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>