<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_marginBottom="?attr/actionBarSize"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="10dp"
                app:tint="@color/purple_700"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Confirm Booking"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="@drawable/borderlesscard"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderlesscard"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BA000000"
                            android:textSize="16sp"

                            android:text="Name : Bhanu"></TextView>
                        <androidx.legacy.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="2dp">
                        </androidx.legacy.widget.Space>
                        <TextView
                            android:id="@+id/txtmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BA000000"
                            android:textSize="16sp"

                            android:text="Email : bhanu.singh@aurosociety.org"></TextView>
                        <androidx.legacy.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="2dp">
                        </androidx.legacy.widget.Space>
                        <TextView
                            android:id="@+id/txtcouncilcontact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/purple_700"
                            android:textColor="#BA000000"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:text="Contact : 9856254102"></TextView>
                        <androidx.legacy.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="2dp">
                        </androidx.legacy.widget.Space>
                        <TextView
                            android:id="@+id/txtappointmentdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BA000000"
                            android:textSize="16sp"
                            android:text="Appointment Date : 2021-02-08"></TextView>
                        <androidx.legacy.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="2dp">
                        </androidx.legacy.widget.Space>
                        <TextView
                            android:id="@+id/txtslot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#BA000000"
                            android:textSize="16sp"
                            android:text="Slot : 03:30 to 04:30 PM"></TextView>
                        <androidx.legacy.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="10dp">
                        </androidx.legacy.widget.Space>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#8E24AA"
                            android:textSize="16sp"
                            android:text="Choose booking mode"></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imgdefaultchat"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_defaultchat"></ImageView>
                            <ImageView
                                android:id="@+id/imgchat"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_chatcircle"></ImageView>
                            <androidx.legacy.widget.Space
                                android:layout_width="20dp"
                                android:layout_height="wrap_content">
                            </androidx.legacy.widget.Space>
                            <ImageView
                                android:id="@+id/imgdefaultphone"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_defaultphone"></ImageView>
                            <ImageView
                                android:id="@+id/imgphone"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_telephonecircle"></ImageView>
                            <androidx.legacy.widget.Space
                                android:layout_width="20dp"
                                android:layout_height="wrap_content">
                            </androidx.legacy.widget.Space>
                            <ImageView
                                android:id="@+id/imgdefaultvideo"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_defaultvideo"></ImageView>
                            <ImageView
                                android:id="@+id/imgvideo"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:visibility="gone"
                                android:src="@drawable/ic_videocircle"></ImageView>
                        </LinearLayout>
                        <androidx.legacy.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="4dp">
                        </androidx.legacy.widget.Space>
                        <TextView
                            android:id="@+id/txtconsultcharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#E53935"
                            android:textSize="16sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtfees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E53935"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"></TextView>
                    <TextView
                        android:id="@+id/txtcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E53935"
                        android:textSize="14sp"
                        android:layout_gravity="right"
                        android:text="Apply Promocode"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"></TextView>
                    <LinearLayout
                        android:id="@+id/layout_code"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:text="Enter Promocode"
                            android:visibility="visible"
                            android:layout_marginTop="8dp"></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="3dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edtpromocode"
                                android:layout_width="180dp"
                                android:paddingLeft="10dp"
                                android:textColor="#000"
                                android:layout_height="38dp"
                                android:background="@drawable/edittext_border"></EditText>
                                <Button
                                    android:id="@+id/btnapply"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="8dp"
                                    android:background="@drawable/roundedcounsellor_button"
                                    android:text="Apply"></Button>
                          <ImageView
                              android:id="@+id/imgcancel"
                              android:layout_width="40dp"
                              android:layout_height="40dp"
                              android:layout_marginTop="1dp"
                              android:layout_marginLeft="5dp"
                              android:src="@android:drawable/ic_menu_close_clear_cancel"
                              app:tint="#E53935"></ImageView>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:id="@+id/recyclerviewoffer"></androidx.recyclerview.widget.RecyclerView>



                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtbreakup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1E88E5"
                        android:textSize="14sp"
                        android:layout_gravity="right"
                        android:text="See breakup"
                        android:visibility="gone"></TextView>
                    <LinearLayout
                        android:id="@+id/layout_breakup"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:padding="10dp"
                        android:background="@drawable/borderlesscard"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AE000000"
                                android:text="Charges"
                                android:layout_alignParentLeft="true"
                                android:textSize="12sp"></TextView>


                            <TextView
                                android:id="@+id/txtcharge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#E53935"
                                android:text="\u20B90"
                                android:drawablePadding="1dp"
                                android:layout_alignParentEnd="true"
                                android:textSize="12sp"></TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtpromocode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#E53935"
                                android:text="Applied Promocode"
                                android:layout_alignParentLeft="true"
                                android:textSize="12sp"></TextView>


                            <TextView
                                android:id="@+id/txtoffervalue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="0"
                                android:textColor="#E53935"
                                android:textSize="12sp"></TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AE000000"
                                android:text="Taxes"
                                android:layout_alignParentLeft="true"
                                android:textSize="12sp"></TextView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#E53935"
                                android:text="2%"
                                android:layout_alignParentEnd="true"
                                android:textSize="12sp"></TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AE000000"
                                android:text="GST"
                                android:layout_alignParentLeft="true"
                                android:textSize="12sp"></TextView>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#E53935"
                                android:text="5%"
                                android:layout_alignParentEnd="true"
                                android:textSize="12sp"></TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AE000000"
                                android:text="Total Charges"
                                android:layout_alignParentLeft="true"
                                android:textSize="12sp"></TextView>


                            <TextView
                                android:id="@+id/txttotalcharge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#E53935"
                                android:text="\u20B9127"
                                android:layout_alignParentEnd="true"
                                android:textSize="12sp"></TextView>
                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="Booking Details"
                                android:textStyle="bold"
                                android:layout_alignParentLeft="true"
                                android:textSize="16sp"></TextView>

                            <androidx.legacy.widget.Space
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"></androidx.legacy.widget.Space>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/purple_700"
                                android:text="Payment mode"
                                android:textSize="14sp"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AE000000"
                                android:text="Online"
                                android:textSize="14sp"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/purple_700"
                                android:text="Booking Date"
                                android:layout_marginTop="10dp"
                                android:textSize="14sp"></TextView>
                            <TextView
                                android:id="@+id/txtcouncildate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/purple_700"
                                android:text="08 February 2021"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:padding="2dp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/purple_700"
                                android:text="Mobile Number"
                                android:layout_marginTop="10dp"
                                android:textSize="14sp"></TextView>
                            <TextView
                                android:id="@+id/txtmobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AE000000"
                                android:text="9889562352"
                                android:textSize="14sp"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#AE000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="8dp"
                                android:padding="8dp"
                                android:text="If any query call to (+91 9889898989)"
                                android:textSize="14sp"></TextView>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btncouncilbook"
                            android:layout_width="300dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:textAllCaps="false"
                            android:background="@drawable/rounded_button"
                            android:text="Book Appointment"></Button>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:visibility="gone"
                            android:layout_marginTop="8dp"
                            android:padding="5dp"
                            android:background="@drawable/rounded_button"
                            android:text="Cancel"></Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>