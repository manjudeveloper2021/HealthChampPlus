<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.VerificationActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#1E88E5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFICATION"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:visibility="visible"
         android:textAlignment="center"

            android:textColor="#fff"
            android:padding="15dp"></TextView>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="10dp">
    </androidx.legacy.widget.Space>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:layout_gravity="center"
    android:gravity="center"
    android:fontFamily="sans-serif-medium"
    android:padding="1dp"
    android:text="A verification OTP"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="1dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:text="has been sent to your mobile and email."></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Please enter it here."></TextView>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="10dp">
    </androidx.legacy.widget.Space>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="15dp"
    android:gravity="center"
    android:orientation="vertical">
    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:itemBackground="@drawable/edittext_border"
        android:inputType="number"
        app:cursorColor="#D81B60"
        android:textColor="#D81B60"
        app:cursorWidth="1dp"
        app:hideLineWhenFilled="false"
        app:itemCount="5"
        app:itemHeight="50dp"
        app:itemSpacing="16dp"
        app:itemWidth="50dp"
        app:lineWidth="1dp" />
</LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="20dp">
    </androidx.legacy.widget.Space>
    <LinearLayout
        android:id="@+id/btnverify"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:background="@drawable/signup_button"
        android:elevation="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="VERIFY"
            android:textColor="#fff" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtresend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:padding="15dp"
        android:textColor="#D81B60"
        android:layout_gravity="center"
        android:text="Resend"></TextView>
    <androidx.legacy.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="30dp">
    </androidx.legacy.widget.Space>
    <LinearLayout
        android:layout_width="60dp"
        android:elevation="10dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/back_buttongrey">
        <ImageView
            android:id="@+id/imgback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/back"
            android:padding="10dp"
            app:tint="#fff"></ImageView>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>